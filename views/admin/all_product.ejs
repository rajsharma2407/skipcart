<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">

</head>
<body>
        <a href="/admin" class="btn btn-outline-primary ml-5 mt-5">Back</a>

        <table class="table table-striped table-hover mx-auto mt-5" style="width:95%;">
            <tr>
                <th>S NO</th>
                <th>Product Name</th>
                <th>Edit Product</th>
                <th>Delete Product</th>
            </tr>
            <%  products.forEach((product,i)=>{ %>
                <tr>
                    <td><%= i+1 %> </td>
                    <td><%= product.productName %> </td>
                    <td><a href="/admin/edit-product/<%= product._id %>">Edit</a></td>
                    <td onclick="confirm('Confirm Delete?')"><a href="/admin/delete-product/<%= product._id %>">Delete</a></td>
                </tr>
         <%   }) %> 
        </table>
</body>
</html>
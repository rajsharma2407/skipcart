<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Categories</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">

</head>
<body>
        <a href="/admin" class="btn btn-outline-primary ml-5 mt-5">Back</a>

        <table class="table table-striped table-hover mx-auto mt-5" style="width:95%;">
            <tr>
                <th>S NO</th>
                <th>Category Name</th>
                <th>Edit Category</th>
                <th>Delete Category</th>
            </tr>
            <%  categories.forEach((category,i)=>{ %>
                <tr>
                    <td><%= i+1 %> </td>
                    <td><%= category.categoryName %> </td>
                    <td><a href="/admin/edit-category/<%= category._id %>">Edit</a></td>
                    <td><a href="/admin/delete-category/<%= category._id %>" onclick="return confirm('Confirm Delete')">Delete</a></td>
                </tr>
         <%   }) %> 
        </table>

        <script>

        </script>
</body>
</html>
<%- include('header') %>
    <span id="msg" class="bg-primary text-light"
        style="padding:10px;border-radius:5px;position:fixed;z-index: 100;;right:10px;top:0px;transform:translateY(-100%);transition:0.1s ease-in-out transform;">Item
        Added</span>
    <div class="img-car">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/image_carousel/toy.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/image_carousel/apples.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/image_carousel/tshirt.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="myContainer">
    <% if(typeof products != 'undefined'){ %>
        <% products.map(product=>{ %>
            <div class="card" key="<%= product.productName %>">
                <div class="img-hider">
                    <a href="/product/<%= product._id %>  ">
                        <img src="/product_images/<%= product._id %>/<%= product.productImage %>" alt=""
                            class="scalable-image">

                    </a>
                </div>
                <div class="body">
                    <div class="card-title">
                        <span>
                            <%= product.productName %>
                        </span>
                        <span>
                            <%= product.productPrice %> Rs
                        </span>
                    </div>
                    <div class="card-text">
                        <a href="/product/<%= product._id %>" class="mr-auto"><button class="btn btn-primary">View
                                product</button></a>
                        <!-- <a href="/add-to-cart/<#%= product._id %>"> -->
                            <% if(cart != null) { %>
                                <button class="btn btn-success" onclick="addCart('<%=product._id %>')">Add to cart</button>
                            <% } %>
                        <!-- </a> -->
                    </div>
                </div>

            </div>
            <% }) %>
    <% } %>

    <h3 class="nothingDiv" style="text-align: center;">Match not found</h3>
    </div>

    <%- include('footer') %>
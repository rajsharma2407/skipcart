<%- include('header') %>
    <div class="register-form">

        <form action="/login" method="POST" class="m-auto">

            <div class="form-group">
                <label for="email">Enter Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="xyz@email.com">
            </div>
            <div class="form-group">
                <label for="password">Enter Password</label>
                <input type="password" name="password" id="password" class="form-control" pattern=".{8,}" required
                    placeholder="Minimum 8 characters" title="Minimum 8 characters are required">
            </div>
            <input type="submit" value="Login" class="btn btn-outline-secondary">
        </form>
        <a href="/register" class="btn btn-outline-primary">Register User</a>

    </div>

    <%- include('footer') %>